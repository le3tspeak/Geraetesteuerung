<Application x:Class="Übung_Gerät.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Übung_Gerät"
             Startup="AplicationStart">
    <Application.Resources>

        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="Blue" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Define the font family as a resource -->
            <FontFamily x:Key="Cascadia Code">/Übung_Gerät;component/Fonts/CascadiaCode/ttf/#Cascadia Code</FontFamily>

        </ResourceDictionary>

    </Application.Resources>
</Application>
